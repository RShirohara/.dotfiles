#!/usr/bin/env bash
# encoding: UTF-8
# author: RShirohara
# copy & paste

clip=$(which clip.exe)
ps=$(which powershell.exe)

function usage() {
    cat << EOF
$(basename ${0}) is a tool for copy & paste on WSL.

Usage:
    $(basename ${0}) [<options>]

Options:
    --help, -h      print this
    -n              don't output the trailing newline
EOF
}

function paste() {
    "$ps" /c Get-Clipboard | sed -Ez -e "s/\r//g" -e "s/\n{2}/\n/"
}

case "$1" in 
    -h|--help )
        usage
        ;;
    -n )
        paste | sed -z "s/\n$//"
        ;;
    -i )
        printf "$2" | "$clip"
        ;;
    "" )
        if [ -p /dev/stdin ]; then
            cat - | "$clip"
        else
            paste
        fi
        ;;
esac
